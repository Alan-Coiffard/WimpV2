<!-- Fichiers Javascript -->
<%
  if (locals.user.animaux) {
    for (const animal of locals.user.animaux) {
      if (animal.id_animal == locals.user.idAnimalSelect) {%>
        <script type="text/javascript">
          var animalDistance = <%= animal.distance %>
          console.log("Distance : ", animalDistance);
          //document.cookie = "animalDistance="+animalDistance;
        </script>
      <%}
    }
  }
%>
<script type="text/javascript">
  let tabGPS = [];
  <% if (locals.user.gps) {%>
    <%  for (const gps of locals.user.gps) {%>
      var gps = new Object();
      gps.altitude = <%=gps.altitude%>;
      gps.longitude = <%=gps.longitude%>;
      gps.latitude = <%=gps.latitude%>;
      tabGPS.push(gps);
    <%}%>
  <%} %>
  console.log("Id utilisateur select : ", <%= locals.user.idAnimalSelect %>);



</script>
