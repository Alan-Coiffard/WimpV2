<input class="notinput recuperationDate" onchange="selectDate()" id="date" type="text" name="datetimes" />

<script type="text/javascript" src="https://cdn.jsdelivr.net/jquery/latest/jquery.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
<script type="text/javascript" src="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.min.js"></script>
<link rel="stylesheet" type="text/css" href="https://cdn.jsdelivr.net/npm/daterangepicker/daterangepicker.css" />

<script>
var formatDate = "DD/MM/YYYY HH:mm";
$(function() {
  $('input[name="datetimes"]').daterangepicker({
    timePicker: true,
    startDate: moment().startOf('hour').subtract(1, 'day'),
    endDate: moment(),
    minDate: moment().subtract(50, 'year'),
    maxDate: moment(),
    locale: {
      format: formatDate
    }
  }, function(start, end, label) {
    var date = document.getElementById('date');
    // console.log(date);
    document.getElementsByClassName("recuperationDate").innerHTML = "Du "+ start.format(formatDate) +  " au "  + end.format(formatDate);
    // console.log(date);
  });
});

